 <section class="hero py-16">
               <div class="container mx-auto flex items-center justify-between">
                       <div class="w-1/2">
                               <h6 class="text-lg"><em>Are you hungry?</em></h6>
                               <h1 class="text-6xl font-bold my-2">Don't Wait</h1>
                               <button class="order-btn rounded-full py-1 px-4">Order Now!</button>
                       </div>
                       <div class="w-1/2">
                               <img class="" src="img/hero-img.png" alt=""/>
                       </div>
               </div>
       </section>
        <section class="menu container mx-auto py-8">
                <h1 class="text-xl font-bold mb-8">All items</h1>
                <div class="grid grid-cols-4 cols-gap-6">
                        <% items.forEach(function(items){ %>
                        <div class="card">
                                <img class="h-40 mb-4 mx-auto" src="img/<%= items.image %>" alt=""/>
                                <div class="text-center">
                                        <h2 class="mb-4 text-lg"><%= items.name %></h2>
                                        <span class="peace py-1 px-4 rounded-full uppercase text-xs"><%= items.size %></span>
                                        <div class="flex items-center justify-between mt-6">
                                            <span>â‚¹<%= items.price %></span>
                                            <button class="add-to-cart py-1 px-5 rounded-full flex items-center font-bold">
                                            <span class="mr-2">+</span>
                                            <span>Add Cart</span>
                                            </button>
                                            </div>
                                </div>
                        </div>
                        <% }) %>
                </div>
        </section>