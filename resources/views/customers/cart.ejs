<section class="cart py-16">
         <% if (session.cart && session.cart.totalQty != 0) {
                  %>
                  <div class="order container mx-auto w-1/2">
                           <div class="flex items-center border-b border-gray-300 pb-4">
                                    <i class="bi bi-cart4 font-bold"></i>
                                    <h1 class="font-bold ml-4 text-2xl">Order Seremony</h1>
                           </div>
                           <div class="order-list">
                                    <% for (let item of Object.values(session.cart.items)) {
                                             %>
                                             <div class="flex items-center my-8">
                                                      <img class="w-24" src="img/<%= item.item.image %>" alt="pani-puri" />
                                                      <div class="flex-1 ml-4">
                                                               <h1><%= item.item.name %></h1>
                                                               <span><%= item.item.size %></span>
                                                      </div>
                                                      <span class="flex-1"><button data-id="<%= item.item._id %>" class="mr-2 font-bold text-red text-xl" id="delbtn"><i class="bi bi-cart-dash"></i></button><%= item.Qty %> pease <button data-id="<%= item.item._id %>" class="ml-1 text-orange text-xl" id="addbtn"><i class="bi bi-cart-plus"></i></button></span>
                                                      <span class="font-bold text-lg"><%= item.item.price %></span>
                                             </div>
                                             <%
                                    } %>
                           </div>
                           <hr>
                           <div class="text-right py-4">
                                    <div>
                                             <span class="text-lg font-bold">Total Amount:</span>
                                             <span class="amount text-2xl font-bold ml-2"><%= session.cart.totalPrice %></span>
                                    </div>
                                    <% if (user) {
                                             %>
                                             <div>
                                                      <form action="/orders" method="POST">
                                                               <% if (messages.error) {
                                                                        %>
                                                                        <span class="text-red-500 alert alert-denger text-sm"><%= messages.error %></span>
                                                                        <%
                                                               } %>
                                                               <input class="border rounded border-gray-400 p-2 w-1/2 my-2" type="text" name="address" placeholder="Address" />
                                                               <input class="border rounded border-gray-400 p-2 w-1/2 my-2" type="number" name="phone" placeholder="phone number" />
                                                               <div>
                                                                        <button class="order-btn py-2 px-6 rounded-full text-white font-bold mt-4" type="submit">Order now</button>
                                                               </div>
                                                      </form>
                                             </div>
                                             <%
                                    } else {
                                             %>
                                             <a href="/login" class="inline-block cursor-pointer order-btn py-2 px-6 rounded-full text-white font-bold mt-4">Login to order</a>
                                             <%
                                    } %>
                           </div>
                  </div>
                  <%
         } else {
                  %>
                  <div class="empty-cart">
                           <div class="container mx-auto text-center">
                                    <h1 class="text-3xl text-bold  mb-2">Cart empty ðŸ™‚</h1>
                                    <p class="text-gray-500 text-lg mb-12">
                                             you probably haven't ordered pani puri yet.to order go to home page
                                    </p>
                                    <img class="w-2/5 mx-auto" src="img/empty-cart.png" alt="empty-cart" />
                                    <a href="/" class="inline-block px-6 py-2 order-btn rounded-full text-white font-bold mt-12">go back</a>
                           </div>
                  </div>
                  <%
         } %>
</section>